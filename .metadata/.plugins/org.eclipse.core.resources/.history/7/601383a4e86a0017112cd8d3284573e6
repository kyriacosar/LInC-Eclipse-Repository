import json

if __name__ == '__main__':
    e_file_in = open("../../../../Documents/Crunchbase Project Data/Twitter Results/Data Dictionaries/Twitter_Entrepreneurs_FacePoints_Dictionaries.json", "r")
    e_file_out = open("../../../../Documents/Crunchbase Project Data/Twitter Results/Data Extraction/Twitter_Entrepreneurs_FHWR.txt", "w")
    
    e_file_out.write("Face Points:\n\n")
    
    e_file_out.write("Left Contour\tRight Contour\tChin Contour\tLeft Eyebrow Right corner\tRight Eyebrow Left corner\n")
    e_file_out.write("-"*13+"\t"+"-"*13+"\t"+"-"*12+"\t"+"-"*25+"\t"+"-"*26+"\n")
    
    for record in e_file_in:   
        try:
            jDict = json.loads(record)
            #print (str(i)+". "+str(jDict['landmark']['mouth_upper_lip_left_contour2']['x']))
            e_file_out.write("x: "+str(jDict['landmark']['contour_left1']['x'])+" y: "+str(jDict['landmark']['contour_left1']['y'])+"\t")
            e_file_out.write("x: "+str(jDict['landmark']['contour_right1']['x'])+" y: "+str(jDict['landmark']['contour_right1']['y'])+"\t")
            e_file_out.write("x: "+str(jDict['landmark']['contour_chin']['x'])+" y: "+str(jDict['landmark']['contour_chin']['y'])+"\t")
            e_file_out.write("x: "+str(jDict['landmark']['left_eyebrow_right_corner']['x'])+" y: "+str(jDict['landmark']['left_eyebrow_right_corner']['y'])+"\t")
            e_file_out.write("x: "+str(jDict['landmark']['right_eyebrow_left_corner']['x'])+" y: "+str(jDict['landmark']['right_eyebrow_left_corner']['y'])+"\n")
        except ValueError:
            print("Error in json to dictionary translation.")