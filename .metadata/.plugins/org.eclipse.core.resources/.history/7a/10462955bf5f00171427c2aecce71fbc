def timeCheck(time):
    sumT = 0
    while time > 0:
        rem = time % 10
        time = time / 10
        sumT += rem
        
    return timeCheck(sumT)
    return true
    
if __name__ == "__main__":
    time = 0
    even = 0
    odd = 0
    
    for time in range(0, 2359):
        
        if timeCheck:
            even += 1
        else:
            odd += 1
            
        time += 1
        
        if time % 60 == 0:
            time += 100
            
    print("Even time: "+str(even))
    print("Odd time: "+str(odd))
